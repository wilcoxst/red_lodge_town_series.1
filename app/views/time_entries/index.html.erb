<%- model_class = TimeEntry -%>
<div class="page-header">
  <h1><%=t '.title', :default => TimeEntry %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:timing) %></th>
      <th><%= model_class.human_attribute_name(:run) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @time_entries.each do |time_entry| %>
      <tr>
        <td><%= time_entry.id %></td>
        <td><%= time_entry.timing %></td>
        <td><%= time_entry.run %></td>
        <td><%=l time_entry.created_at, format: :long %></td>
        <td>
          <%= link_to time_entry_path(time_entry), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to time_entry_path(time_entry), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_time_entry_path,
            :class => 'btn btn-primary' %>
