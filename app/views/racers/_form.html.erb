<%= simple_form_for(@racer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :gender %>
    <%= f.association :team %>
    <%= f.association :discipline %>
    <%= f.association :classification %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
